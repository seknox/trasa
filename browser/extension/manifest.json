{
  "manifest_version": 2,
  "name": "TRASA",
  "version": "1.0",
  "author": "Sakshyam Shah @sshahcodes |seknox.com|",
  "browser_specific_settings": {
    "gecko": {
      "id": "trasa.brsr.ext@seknox.com"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "images/trasa-icon-16.png",
      "32": "images/trasa-icon-32.png",
      "48": "images/trasa-icon-48.png",
      "128": "images/trasa-icon-128.png"
    },
    "default_title": "trasa",
    "default_popup": "trasa.html"
  },
  "icons": {
    "16": "images/trasa-icon-16.png",
    "32": "images/trasa-icon-32.png",
    "48": "images/trasa-icon-48.png",
    "128": "images/trasa-icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "getters.js",
      "utils.js",
      "sr.js",
      "daemon.js",
      "native-messaging.js"
    ]
  },

  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "storage",
    "management",
    "webRequest",
    "webRequestBlocking",
    "nativeMessaging"
  ]
}
